<% if user_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-ribbon"></i>
        Listing Lessons
      </h4>
      <hr/>
      <%= link_to new_lesson_path, class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-plus-square"></i>
        New Lesson
      <% end %>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Course name</th>
            <th>Name</th>
            <th>Material</th>
            <th>Teacher name</th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
               <td>
                <%= lesson.course.name %>
              </td>
              <td>
                <%= lesson.name %>
              </td>
              <td>
                <%= lesson.material %>
              </td>
               <td>
                <%= lesson.course.teacher.name %>
              </td>
              <td>
                <%= link_to lesson, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
                <%= link_to edit_lesson_path(lesson), class: 'btn btn-primary btn-sm' do %>
                  <i class="fa fa-edit"></i>
                  Edit
                <% end %>
                <%= link_to lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                  <i class="fa fa-trash"></i>
                  Delete
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% elsif %>
<% teacher_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-ribbon"></i>
        Listing your lessons
      </h4>
      <hr/>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Material</th>
          </tr>
        </thead>
        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td>
                <%= current_teacher.courses.lesson.name %>
              </td>
              <td>
                <%= lesson.material %>
              </td>
              <td>
                <%= link_to course.lesson, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% elsif %>
<% student_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
     <h4 class="title">
        <i class="pe-7s-ribbon"></i>
        Suas Aulas
      </h4>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Material</th>
          </tr>
        </thead>
        <tbody>
          <% if current_student.lesson != nil %>
            <tr>
              <td>
                <%= current_student.lesson.name %>
              </td>
              <td>
                <%= current_student.lesson.description %>
              </td>
              <td>
                <%= current_student.lesson.grade.name %>
              </td>
              <td>
                <%= link_to current_student.lesson, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% elsif %>
<% parent_signed_in? %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">
        <i class="pe-7s-ribbon"></i>
        Aulas
      </h4>
      <hr/>
      <br/>
      <br/>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Material</th>
          </tr>
        </thead>
        <tbody>
           <% current_parent.students.each do |student| %>
            <tr>
              <td>
                <%= student.name %>
              </td>
              <td>
                <%= student.lesson.name %>
              </td>
              <td>
                <%= student.lesson.description %>
              </td>
              <td>
                <%= student.lesson.grade.name %>
              </td>
              <td>
                <%= link_to student.lesson, class: 'btn btn-info btn-sm' do %>
                  <i class="fa fa-eye"></i>
                  Show
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <br/>
  </div>
</div>
<% else %>
<p>Private page</p>
<% end %>
