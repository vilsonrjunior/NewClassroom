<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Lessons</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
              <th>Name</th>
              <td>
                <%= @lesson.name %>
              </td>
            </tr>
              <th>Material</th>
              <td>
                <%= @lesson.material %>
              </td>
            </tr>
          </table>
        </div>
    </div>
    <br/>
  </div>
</div>
