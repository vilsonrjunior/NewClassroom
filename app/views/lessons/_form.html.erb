<%= simple_form_for(@lesson) do |f| %>
  <%= f.date_field :start_date %>
  <%= f.date_field :end_date %>
  <%= f.input :name %>
  <%= f.input :material %>
  <%= f.input :course_id, collection: Course.all %>
  <%= f.submit "Create lesson", class: "btn btn-talk" %>
<% end %>


