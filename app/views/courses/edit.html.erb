<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Edit Course</h4>
      <hr/>
    </div>
    <div class="content">
      <%= render 'form' %>
    </div>
    <hr/>
    <div class="footer">
      <%= link_to courses_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to @course, class: 'btn btn-info btn-fill' do %>
        <i class="fa fa-eye"></i>
        Show
      <% end %>
    </div>
    <br/>
  </div>
</div>
