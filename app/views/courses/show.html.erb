<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Course</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
            <tr>
              <th>Name</th>
              <td>
                <%= @course.name %>
              </td>
            </tr>
            <tr>
              <th>Description</th>
              <td>
                <%= @course.description %>
              </td>
            </tr>
            <tr>
              <th>Grade</th>
              <td>
                <%= @course.grade.name %>
              </td>
            </tr>
            <tr>
              <th>Teacher</th>
              <td>
                <%= @course.teacher.name %>
              </td>
            </tr>
            <tr>
              <th>Students enrolled</th>
              <td>
                <% @course.students.each do |student| %>
                <%= student.name  %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="footer">
      <%= link_to courses_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to edit_course_path(@course), class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-edit"></i>
        Edit
      <% end %>
    </div>
    <br/>
  </div>
</div>
