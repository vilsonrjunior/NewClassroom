<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="col-xs-12 col md-12">
  <div class="card">
    <div class="header">
      <h4 class="title">Teacher</h4>
      <hr/>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <table class="table">
            <tr>
              <th>Image</th>
              <td>
                <%= image_tag @teacher.image, size: '150x150' %>
              </td>
            </tr>
            <tr>
              <th>Name</th>
              <td>
                <%= @teacher.name %>
              </td>
            </tr>
            <tr>
              <th>Gender</th>
              <td>
                <%= @teacher.gender %>
              </td>
            </tr>
            <tr>
              <th>Date of Birth</th>
              <td>
                <%= @teacher.dob %>
              </td>
            </tr>
            <tr>
              <th>Phone</th>
              <td>
                <%= @teacher.phone %>
              </td>
            </tr>
            <tr>
              <th>Email</th>
              <td>
                <%= @teacher.email %>
              </td>
            </tr>
            <tr>
              <th>Address</th>
              <td>
                <%= @teacher.address %>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-md-6 col-xs-12">
          <input id="lat-value" type="hidden" value="<%= @teacher.lat %>"></input>
          <input id="long-value" type="hidden" value="<%= @teacher.long %>"></input>
          <div id="show-teacher-map"></div>
        </div>
      </div>
    </div>
    <div class="footer">
      <%= link_to teachers_path, class: 'btn btn-default' do %>
        <i class="fa fa-chevron-left"></i>
        Back
      <% end %>
      <%= link_to edit_teacher_path(@teacher), class: 'btn btn-primary btn-fill' do %>
        <i class="fa fa-edit"></i>
        Edit
      <% end %>
    </div>
    <br/>
  </div>
</div>
